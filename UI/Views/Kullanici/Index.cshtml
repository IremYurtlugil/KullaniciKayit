@model ViewModels.CariVM.CariVM
@{ 
    Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <meta name="author" content="">
    <title>@ViewData["Title"] - InsanKaynaklariYonetimiPlatformu</title>
    <link href="~/Dashboard/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" />
    <link href="~/Boostrap5.1.3/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    <link href="~/Dashboard/sb-admin-2.min.css" rel="stylesheet" />
</head>
<body id="page-top" class="sidebar-toggled">

    <div id="wrapper">

        <!-- YAN MENÜ -->
        <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion toggled" id="accordionSidebar">

            <!-- Firma Logo -->
            <a class="sidebar-brand d-flex align-items-center justify-content-center" asp-action="Index" asp-controller="@Statu">
                <div class="sidebar-brand-icon ">
                    <img class="img-profile rounded-circle" style="height:60px; width:60px;" src="~/@CompanyLogo" />
                </div>
                <div class="sidebar-brand-text mx-3">@CompanyName</div>
            </a>

            <!-- Divider -->
            <hr class="sidebar-divider my-0" />

            <!-- Ana Sayfa Kısayolu -->
            <li class="nav-item">
                <a class="nav-link" asp-action="Index" asp-controller="@Statu">
                    <i class="fas fa-user-tie"></i>
                    <span>Ana Sayfa</span>
                </a>
            </li>

            <!-- Divider -->
            <hr class="sidebar-divider" />



            <!-- Yönetim Menüsü Başlangıcı -->
            <div class="sidebar-heading">
                Yönetim
            </div>